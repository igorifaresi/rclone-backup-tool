#!/bin/bash

echoUsage() {
  echo ""
  echo "Invalid command"
  echo "Usage:"
  echo "  rclone-backup-tool [INPUT_FOLDER] [OUTPUT_REMOTE]"
  echo ""
  echo "Transfer all files of input folder to output remote in a folder
  with data timestamp at name in a model 'backup_%d-%m-%y'. This is script 
  is not recursive, don't backup folders and folders content."
}

if [ -z "$1" ]
then
  echoUsage
  exit 1
fi

if [ -z "$2" ]
then
  echoUsage
  exit 1
fi

INPUT_FOLDER=$(echo $1)
OUTPUT_REMOTE=$(echo $2)

FOLDER_NAME=$(date +'backup_%d-%m-%y')
rclone mkdir $OUTPUT_REMOTE:/$FOLDER_NAME
echo "" > $INPUT_FOLDER/$FOLDER_NAME.log

archives=$(find $INPUT_FOLDER -maxdepth 1 -not -type d)
for archive in $archives; do
  md5sum $archive > $archive.md5
  rclone sync -v $archive.md5 $OUTPUT_REMOTE:/$FOLDER_NAME/ &>> $INPUT_FOLDER/$FOLDER_NAME.log
  if [ $? -ne 0 ]
  then
    echo "!!! Error in backup file $archive.md5 !!!" >> $INPUT_FOLDER/$FOLDER_NAME.log
  fi

  rclone sync -v $archive $OUTPUT_REMOTE:/$FOLDER_NAME/ &>> $INPUT_FOLDER/$FOLDER_NAME.log
  if [ $? -ne 0 ]
  then
    echo "!!! Error in backup file $archive !!!" >> $INPUT_FOLDER/$FOLDER_NAME.log
  fi
done
